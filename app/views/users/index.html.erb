<div class="content-wrapper buffer-both text-center">
  <div class="buffer-both">
    <h1 class='text-xl text-red-400'>Список пользователей</h1>
  </div>

  <% @users.each do |user| %>
  <div class="users-list-item">
    <div class="user-image-div">
      <%= link_to image_tag(user_avatar(user), class: 'place-self-center'), user_path(user) %>
    </div>
  </div>
  <% end %>
</div>
